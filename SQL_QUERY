CREATE TABLE USER(
    userId CHAR(37) PRIMARY KEY,
    userName VARCHAR(30),
    password VARCHAR(30),
    fullName NVARCHAR(150),
    sex CHAR(5) DEFAULT 'MALE',
    createdDate CHAR(17),
    lastModifiedDate CHAR(17),
    active BIT DEFAULT TRUE
);
CREATE TABLE ROLE(
    Id INT AUTO_INCREMENT PRIMARY KEY ,
    name VARCHAR(15)
);

CREATE TABLE USER_ROLE(
    Id INT AUTO_INCREMENT PRIMARY KEY ,
    userId CHAR(37),
    roleId INT,
    CONSTRAINT PK_USER_ROLE FOREIGN KEY (userId) REFERENCES USER(userId),
    CONSTRAINT PK_ROLE_USER FOREIGN KEY (roleId) REFERENCES ROLE(Id)
);
<!-- create news -->
CREATE TABLE CATEGORY(
    categoryId INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(15)
)
CREATE TABLE NEWS(
    newsId INT AUTO_INCREMENT PRIMARY KEY,
    title NVARCHAR(150),
    description NVARCHAR(300),
    detail BLOB,
    imagePath VARCHAR(45),
    categoryId INT,
    CONSTRAINT PK_NEWS FOREIGN KEY (categoryId) REFERENCES CATEGORY(categoryId)
);
CREATE TABLE IMAGE(
    imageId INT AUTO_INCREMENT PRIMARY KEY,
    imagePath VARCHAR(45),
    newsId int,
    CONSTRAINT PK_IMAGE FOREIGN KEY (newsId) REFERENCES NEWS(newsId)
);